{% set isMarketing = true %}
{% extends "index-with-alerts.html.twig" %}

{% block content %}
<div class="thumbnail login" >
    <div class="tcenter">
        {% include 'logo.html.twig' %}
    </div>
    <form name="login" id="submit_section" class="tcenter" method="get" action="{{ path('loginProcess') }}">
        <div class="control-group">
            <span class="edit">
                <input type="text" name="tenant_hint" id="tenant_hint"  value = "{{ tid }}"
                        placeholder="{{ 'Tenant ID'|trans }}" class="inherit-width" aria-label="tenant">
            </span>
        </div>
        <div class="login-footer">
            <span class="edit">
                <input type="submit" class="btn btn-primary" role="button" value="{{ 'Next'|trans }}" />
            </span>
        </div>
        {% if user_name %}
            <input type="hidden" name="login_hint" value="{{ user_name }}">
        {% endif %}
        {% if new_login is defined and new_login is not empty %}
            <input type="hidden" name="new_login" value="{{ new_login }}">
        {% endif %}
    </form>
</div>
{% endblock %}
{% block marketing %}
    {% include 'marketing.html.twig' %}
{% endblock %}
