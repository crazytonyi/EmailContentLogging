{% set image = asset('img/company_logo.png') %}
{% set name = 'SugarCRM' %}
{% set showWelcome = false %}

{% set tenant = tenant() %}
{% if tenant is not null %}
    {% set image = tenant.Logo %}
    {% set name = tenant.DisplayName %}
    {% if tenant.DisplayName is not empty %}
        {% set showWelcome = true %}
    {% endif %}
{% endif %}

{% if image is empty %}
    {% set image = asset('img/company_logo.png') %}
{% endif %}

<div class="brand tcenter">
    <h2 class="brand">
        <img src="{{ image }}" alt="{{ name }}" style="max-width: 240px">
    </h2>
    {% if showWelcome %}
        <div class="tenant-welcome">
            <h4>{{ 'Welcome to'|trans }}</h4>
            <span>{{ name }}</span>
        </div>
    {% endif %}
</div>
