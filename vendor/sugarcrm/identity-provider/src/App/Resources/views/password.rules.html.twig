{% if (passwordRequirements['minimum_length'] is defined and passwordRequirements['minimum_length'] > 0) or
        (passwordRequirements['maximum_length'] is defined and passwordRequirements['maximum_length'] > 0) or
        (passwordRequirements['require_upper'] is defined and passwordRequirements['require_upper'] == true) or
        (passwordRequirements['require_lower'] is defined and passwordRequirements['require_lower'] == true) or
        (passwordRequirements['require_number'] is defined and passwordRequirements['require_number'] == true) or
        (passwordRequirements['require_special'] is defined and passwordRequirements['require_special'] == true)
%}
        <p>{{ 'Password requirements:'|trans }}</p>
        <ul>
            {% if passwordRequirements['minimum_length'] is defined and passwordRequirements['minimum_length'] > 0 %}
                <li>{{ 'Minimum length = %minimum_length%'|trans({'%minimum_length%': passwordRequirements['minimum_length']})|raw }}</li>
            {% endif %}
            {% if passwordRequirements['maximum_length'] is defined and passwordRequirements['maximum_length'] > 0 %}
                <li>{{ 'Maximum length = %maximum_length%'|trans({'%maximum_length%': passwordRequirements['maximum_length']})|raw }}</li>
            {% endif %}
            {% if passwordRequirements['require_upper'] is defined and passwordRequirements['require_upper'] == true %}
                <li>{{ 'Must contain one upper case letter (A-Z)'|trans }}</li>
            {% endif %}
            {% if passwordRequirements['require_lower'] is defined and passwordRequirements['require_lower'] == true %}
                <li>{{ 'Must contain one lower case letter (a-z)'|trans }}</li>
            {% endif %}
            {% if passwordRequirements['require_number'] is defined and passwordRequirements['require_number'] == true %}
                <li>{{ 'Must contain one number (0-9)'|trans }}</li>
            {% endif %}
            {% if passwordRequirements['require_special'] is defined and passwordRequirements['require_special'] == true %}
                <li>{{ 'Must contain one special character (~!@#$%^&*()_+-={}|)'|trans }}</li>
            {% endif %}
        </ul>
{% endif %}